.partial[data-partial="elements/figcaption"] {
    display: block;
    width: 50%;

    .partial[data-partial*="elements/headline"] {
      display: inline-block;
      margin: 0;
      padding: 0.2em 0.5em;
      background-color: rgb(0,0,0);
      color: rgb(255,255,255);
    }

    .partial[data-partial*="elements/text"] {
      display: block;
      margin: 0;
      padding: 0.2em 0.5em;
      background-color: rgb(120,120,120);
      color: rgb(255,255,255);
    }
}
