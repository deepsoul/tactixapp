.partial[data-partial="fragments/rotateable-point"] {
  position: relative;
  width:100%;
  height: 100%;
  border-radius: 50%;
  border: 1px solid black;

  &:before {
    content: '';
    display: block;
    padding-bottom: 100%;
  }

  .handle {
    position: absolute;
    top: 50%;
    left: 50%;
    width: 5em;
    height: 5em;
    margin-left: -2.5em;
    margin-top: -2.5em;
    border-radius: 50%;
    border: 1px solid black;
  }
}
